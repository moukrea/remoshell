# .env.docker.example
# Docker environment configuration for RemoteShell
# Copy to .env.docker and use with docker compose

# Logging
RUST_LOG=debug
RUST_BACKTRACE=1

# Service discovery (container network names)
# These use Docker internal DNS resolution
REMOSHELL_SIGNALING_URL=ws://signaling:8787
VITE_SIGNALING_URL=ws://localhost:8787

# Container ports (host:container mapping)
SIGNALING_PORT=8787
DAEMON_PORT=8080
FRONTEND_PORT=5173

# Data persistence
REMOSHELL_DATA_DIR=/data

# Optional: TURN server (enable with --profile turn)
TURN_USER=testuser
TURN_PASS=testpass

# Build configuration
CARGO_INCREMENTAL=1
CARGO_NET_GIT_FETCH_WITH_CLI=true

# Network settings
DOCKER_NETWORK=remoshell-dev
