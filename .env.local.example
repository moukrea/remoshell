# .env.local.example
# Local development environment configuration for RemoteShell
# Copy to .env.local and customize as needed

# Logging
RUST_LOG=debug
RUST_BACKTRACE=1

# Signaling server (local development)
SIGNALING_URL=ws://localhost:8787
REMOSHELL_SIGNALING_URL=ws://localhost:8787

# Daemon configuration
DAEMON_PORT=8080
REMOSHELL_DATA_DIR=./data

# Frontend dev server
DEV_SERVER_PORT=5173
VITE_SIGNALING_URL=ws://localhost:8787
VITE_DEV_MODE=true

# Optional: TURN server credentials (for WebRTC relay testing)
# TURN_USER=testuser
# TURN_PASS=testpass
# TURN_URL=turn:localhost:3478
